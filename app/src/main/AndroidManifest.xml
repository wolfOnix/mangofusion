<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mangofusion.apps.shopassist">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/shop_assist"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopAssist"
        android:windowSoftInputMode="adjustResize">
        <activity android:name=".DeliveryViewByIssuerActivity"></activity>
        <activity android:name=".DeliveryViewActivity" />
        <activity android:name=".FulfillShoppingActivity" />
        <activity android:name=".TakeListActivity" />
        <activity
            android:name=".PublishShoppingList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateShoppingList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyAccountUpdateDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyAccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>