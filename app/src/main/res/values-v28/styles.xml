<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">100dp</item> <!-- v28 -->
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="gray_button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>