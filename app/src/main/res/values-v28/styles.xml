<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_main" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">100dp</item> <!-- v28 -->
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
