<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_main" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">100dp</item> <!-- v28 -->
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_main_red" parent="@style/button_main">
        <item name="android:backgroundTint">@color/magenta</item>
    </style>

    <style name="button_back" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="button_gray" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="title_1" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textSize">30sp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/rubik_semibold</item>
    </style>

    <style name="description" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="input_field" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>

</resources>